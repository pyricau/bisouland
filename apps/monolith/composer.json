    ],
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/*"
        }
    ],
    "require": {
        "php": ">=8.5",
        "bl/auth": "*@dev",
        "bl/exception": "*@dev",
        "ext-curl": "*",
        "ext-pdo_pgsql": "*",
        "symfony/uid": "^8.0.4"
    },
    "autoload": {
        "psr-4": {
            "Bl\\": "src/"
        },
        "files": [
            "phpincludes/bd.php",
            "phpincludes/cast_to_pg_boolean.php",
            "phpincludes/cast_to_unix_timestamp.php",
            "phpincludes/cast_to_pg_timestamptz.php",
            "phpincludes/fctIndex.php",
            "phpincludes/remove_auth_token.php",
            "phpincludes/save_auth_token.php"
        ]
    },
    "config": {
        "bump-after-update": true,
        "sort-packages": true
    }
}
